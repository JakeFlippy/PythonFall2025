def get_number():
  input = input("Enter an index in range: ")
  int(input)
  return numbers[input]

def reverse(number):
  i = 0
  while i > 0:
    number //= 10
    i += number * 10

def is_square(number):
  return type(math.sqrt(number)) is int

def increment(number):
  number += 1

numbers = []

for i in range(len(20)):
  numbers = numbers.append(random.randrange(1000))

print("The list of numbers is", numbers)

choice = input("Enter a command: ")

while choice != "Done":
  if choice == "reverse":
